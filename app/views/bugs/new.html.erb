<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-7">
      <div class="card shadow-lg border-0 rounded-lg mt-5">
        <div class="card-header"><h3 class="text-center font-weight-light my-4">Create Bug</h3></div>
          <div class="card-body">
            <%= form_with model: ([@project, @bug]) do |form| %>
              <div>
                <%= form.label :title %><br>
                <%= form.text_field :title %>
                <% @bug.errors.full_messages_for(:title).each do |message| %>
                  <div><%= message %></div>
                <% end %>
              </div>

              <div>
                <%= form.label :comment %><br>
                <%= form.text_area :comment %><br>
                <% @bug.errors.full_messages_for(:comment).each do |message| %>
                  <div><%= message %></div>
                <% end %>
              </div>

              <% arr = Array.new %>
              <% @users.each do |u| %>
                <% if u.role == "developer" %>
                  <% arr.push(u.email) %>
                <% end %>
              <% end %>

              <div class="field">
                <%= form.label :user_id, "Bug Assigned To " %>
                <%= form.select :user_id, arr %><br />
              </div>

              <div>
                <%= form.submit "Create Bug", class: "btn btn-dark" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>