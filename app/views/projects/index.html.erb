<h1 class="mt-4 text-center">All Projects</h1>
<hr />

<% if policy(Project).index? %>
<h5 class="container">
  <%= link_to "Create a new project", new_project_path, class:
  "btn btn-primary" %>
</h5>
<% end%>
<br />
<div class="card mb-4">
  <div class="card-header">
    <i class="fas fa-table me-1"></i>
    All Projects
  </div>

  <div class="card-body">
    <table id="datatablesSimple">
      <thead>
        <tr>
          <th>ID</th>
          <th>Project Title</th>
          <th>Project Description</th>
        </tr>
      </thead>
      <tbody>
        <% count = 0 %> <% @projects.each do |p| %>

        <tr>
          <td><%= count = count+1 %></td>
          <td><%# link_to p.title, project_path(p) %><%= p.title %></td>
          <td><%= p.description %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
